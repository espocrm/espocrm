{
    "order": [
        "main",
        "admin",
        "crm",
        "chart",
        "calendar",
        "timeline",
        "extra"
    ],
    "basePath": "client",
    "transpiledPath": "client/lib/transpiled",
    "chunks": {
        "main": {
            "files": [
                "src/exceptions.js",
                "src/utils.js"
            ],
            "ignoreFiles": [
                "src/namespace.js",
                "src/loader.js",
                "src/pre-loader.js"
            ],
            "patterns": [
                "src/*.js",
                "src/ui/**/*.js",
                "src/views/*.js",
                "src/views/site/*.js",
                "src/views/fields/*.js",
                "src/views/record/**/*.js",
                "src/views/search/**/*.js",
                "src/views/modals/*.js",
                "src/views/dashlets/**/*.js",
                "src/views/global-search/*.js",
                "src/views/stream/**/*.js",
                "src/views/note/**/*.js",
                "src/views/notification/*.js",
                "src/controllers/!(admin|inbound-email|layout-set|api-user|role|portal-role).js",
                "src/models/*.js",
                "src/collections/*.js",
                "src/acl/*.js"
            ]
        },
        "admin": {
            "patterns": [
                "src/views/admin/**/*.js",
                "src/views/authentication-provider/**/*.js",
                "src/views/inbound-email/**/*.js",
                "src/views/templates/**/*.js",
                "src/views/role/**/*.js",
                "src/views/portal-role/**/*.js",
                "src/views/scheduled-job/**/*.js",
                "src/views/lead-capture/**/*.js",
                "src/views/lead-capture-log-record/**/*.js",
                "src/views/webhooks/**/*.js",
                "src/views/layout-set/**/*.js",
                "src/controllers/admin.js",
                "src/controllers/inbound-email.js",
                "src/controllers/layout-set.js",
                "src/controllers/api-user.js",
                "src/controllers/role.js",
                "src/controllers/portal-role.js"
            ]
        },
        "crm": {
            "patterns": [
                "modules/crm/src/**/*.js"
            ],
            "lookupPatterns": [
                "modules/crm/src/**/*.js"
            ]
        },
        "chart": {
            "patterns": [
                "modules/crm/src/**/*.js"
            ],
            "dependentOn": [
                "lib!Flotr",
                "lib!espo-funnel-chart"
            ],
            "requires": [
                "lib!Flotr",
                "lib!espo-funnel-chart"
            ],
            "lookupPatterns": [
                "modules/crm/src/**/*.js"
            ]
        },
        "calendar": {
            "patterns": [
                "modules/crm/src/**/*.js"
            ],
            "dependentOn": [
                "lib!full-calendar"
            ],
            "requires": [
                "lib!full-calendar"
            ],
            "lookupPatterns": [
                "modules/crm/src/**/*.js"
            ]
        },
        "timeline": {
            "patterns": [
                "modules/crm/src/**/*.js"
            ],
            "dependentOn": [
                "lib!vis"
            ],
            "requires": [
                "lib!vis"
            ],
            "lookupPatterns": [
                "modules/crm/src/**/*.js"
            ]
        },
        "extra": {
            "patterns": [
                "src/**/*.js"
            ],
            "ignoreFiles": [
                "src/namespace.js",
                "src/loader.js",
                "src/pre-loader.js"
            ],
            "noDuplicates": true
        }
    },
    "modulePaths": {
        "crm": "modules/crm"
    },
    "lookupPatterns": [
        "src/**/*.js"
    ]
}
