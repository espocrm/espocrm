{
   "controller": "controllers/record",
   "recordViews":{
      "list": "crm:views/task/record/list",
      "detail": "crm:views/task/record/detail"
   },
   "views": {
      "list": "crm:views/task/list",
      "detail": "crm:views/task/detail"
   },
   "dynamicLogic": {
      "fields": {
         "dateCompleted": {
            "visible": {
               "conditionGroup": [
                  {
                     "type": "equals",
                     "attribute": "status",
                     "value": "Completed"
                  }
               ]
            }
         },
         "reminders": {
            "visible": {
               "conditionGroup": [
                  {
                     "type": "and",
                     "value": [
                        {
                           "type": "isNotEmpty",
                           "attribute": "dateEnd"
                        },
                        {
                           "type": "isEmpty",
                           "attribute": "dateEndDate"
                        }
                     ]
                  }

               ]
            }
         }
      }
   },
   "filterList": [
      "actual",
      {
         "name":"completed",
         "style": "success"
      },
      {
         "name":"todays"
      },
      {
         "name":"overdue",
         "style": "danger"
      }
   ],
   "boolFilterList": ["onlyMy"]
}
