            "type": "password"
        },
        "oidcAuthorizationEndpoint": {
            "type": "url",
            "strip": false
        },
        "oidcUserInfoEndpoint": {
            "type": "url",
            "strip": false
        },
        "oidcTokenEndpoint": {
            "type": "url",
            "strip": false
