{
    "fields": {
        "name": {
            "type": "varchar",
            "maxLength": 100,
            "required": true,
            "pattern": "[a-zA-Z]{1}[a-zA-Z0-9_]+",
            "index": true,
            "tooltip": true
        },
        "value": {
            "type": "text",
            "required": true,
            "view": "views/admin/app-secret/fields/value"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "orderBy": "name",
        "order": "asc",
        "textFilterFields": ["name"]
    },
    "indexes": {
        "nameDeleteId": {
            "type": "unique",
            "columns": [
                "name",
                "deleteId"
            ]
        }
    },
    "deleteId": true
}
