            "isSystem": true,
            "scheduling": "25 5 * * *"
        },
        "ProcessJobQueueQ0": {
            "name": "Process Job Queue q0",
            "isSystem": true,
            "scheduling": "* * * * *"
        },
        "ProcessJobQueueQ1": {
