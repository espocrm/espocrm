{
   "controller": "controllers/record",
   "acl": "acl/email",
   "model": "models/email",
   "views": {
      "list": "views/email/list",
      "detail": "views/email/detail"
   },
   "recordViews":{
      "list": "views/email/record/list",
      "detail": "views/email/record/detail",
      "edit": "views/email/record/edit",
      "editQuick":"views/email/record/edit-quick",
      "detailQuick":"views/email/record/detail-quick"
   },
   "modalViews": {
      "detail": "views/email/modals/detail"
   },
   "menu": {
      "list": {
         "buttons": [
            {
               "label": "Compose",
               "action": "composeEmail",
               "style": "danger",
               "acl": "create"
            }
         ],
         "dropdown": [
             {
               "label": "Archive Email",
               "link": "#Email/create",
               "acl": "create"
             },
             {
               "label": "Email Templates",
               "link": "#EmailTemplate",
               "acl": "read",
               "aclScope": "EmailTemplate"
             },
             {
               "label": "Email Accounts",
               "link": "#EmailAccount",
               "aclScope": "EmailAccountScope"
             }
         ]
      },
      "detail": {
         "buttons": [
            {
               "label": "Reply",
               "action": "replyToAll",
               "style": "danger",
               "acl": "read"
            }
         ],
         "dropdown": [
             {
               "label": "Reply",
               "action": "reply",
               "acl": "read"
             },
             {
               "label": "Reply to All",
               "action": "replyToAll",
               "acl": "read"
             },
             {
               "label": "Forward",
               "action": "forward",
               "acl": "read"
             }
         ]
      }
   },
   "filterList": [
      "inbox",
      "sent",
      "drafts",
      "trash"
   ],
   "defaultFilterData": {
       "presetName": "inbox",
       "primary": "inbox"
   },
   "boolFilterList": []
}
