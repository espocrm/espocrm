# EspoCRM Docker Configuration
# Copy this file to .env and customize values

# Database Configuration
DB_ROOT_PASSWORD=espocrm_root_secure
DB_NAME=espocrm
DB_USER=espocrm
DB_PASSWORD=espocrm_pass_secure

# Admin Account (first-time setup only)
ADMIN_USER=admin
ADMIN_PASSWORD=change_me_immediately

# Site Configuration
SITE_URL=http://localhost:8080
APP_PORT=8080

# WebSocket Configuration
WEBSOCKET_URL=ws://localhost:8081
WEBSOCKET_PORT=8081

# Localization
LANGUAGE=en_US
TIME_ZONE=UTC
