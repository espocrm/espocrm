{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "price": {
            "type": "currency",
            "required": true,
            "min": 0,
            "isCustom": true
        },
        "salesDate": {
            "notNull": false,
            "type": "date",
            "useNumericFormat": true,
            "tooltip": true,
            "isCustom": true
        },
        "isPaid": {
            "notNull": true,
            "type": "bool",
            "isCustom": true
        },
        "event": {
            "type": "link"
        },
        "status": {
            "type": "enum",
            "required": true,
            "options": [
                "booked",
                "notPaid",
                "paid"
            ],
            "style": {
                "booked": "warning",
                "notPaid": "danger",
                "paid": "success"
            },
            "default": "booked",
            "audited": true,
            "isCustom": true
        },
        "bookedStart": {
            "notNull": false,
            "type": "datetime",
            "default": "javascript: return this.dateTime.getNow(1);",
            "minuteStep": 30,
            "tooltip": true,
            "isCustom": true
        },
        "bookedEnd": {
            "notNull": false,
            "type": "datetime",
            "default": "javascript: return this.dateTime.getDateTimeShiftedFromNow(1, 'days', 15);",
            "minuteStep": 30,
            "tooltip": true,
            "isCustom": true
        },
        "contact": {
            "type": "link",
            "required": false,
            "createButton": true
        },
        "ticketType": {
            "type": "link"
        },
        "seat": {
            "type": "int",
            "required": true,
            "min": 1,
            "isCustom": true
        },
        "row": {
            "type": "int",
            "required": true,
            "min": 1,
            "isCustom": true
        },
        "phone": {
            "type": "varchar",
            "maxLength": 15,
            "options": [],
            "isCustom": true
        },
        "email": {
            "type": "varchar",
            "maxLength": 50,
            "options": [],
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "event": {
            "type": "belongsTo",
            "foreign": "tickets",
            "entity": "Event",
            "audited": false,
            "isCustom": true
        },
        "contact": {
            "type": "belongsTo",
            "foreign": "tickets",
            "entity": "Contact",
            "audited": false,
            "isCustom": true
        },
        "ticketType": {
            "type": "belongsTo",
            "foreign": "tickets",
            "entity": "TicketType",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}